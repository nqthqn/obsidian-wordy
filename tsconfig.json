{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES6",
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"include": [
		"**/*.ts"
	]
}
